@model IEnumerable<DoAnChuyenNganh.Models.Product>
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutABC1.cshtml";
}

<h2>Product</h2>
<div class="row">
    @foreach (var pro in Model)
    {
    <a href="@Url.Action("Details", "ABC", new { id = pro.idpro})">
        <img alt="@pro.namepro" src="~/Images/@pro.image" width="200" />
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h4 style="text-align:center">@pro.namepro</h4>
                    <br />
                    <h4 class="pull-left">@pro.price</h4>
                    <br />
                </div>
                <div class="ratings">
                    <p class="pull-right">1103 reviews</p>
                    <p>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                    </p>
                </div>
            </div>
        </div>
    </a>
    }
</div>

