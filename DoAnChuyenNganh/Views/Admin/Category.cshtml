@using DoAnChuyenNganh.Models
@using PagedList.Mvc
@model PagedList.PagedList<Category>
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Category</h2>

<p>
    @Html.ActionLink("Create New", "AddCategory")
</p>
<table class="table">
    <tr>
        <th>
            Name :
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCategory", new { id = item.idcate }) |
                @Html.ActionLink("Delete", "DeleteCategory", new { id = item.idcate })
            </td>
        </tr>
    }

</table>
<div style="clear:both">
    Trang @Model.PageNumber/@Model.PageCount
</div>
<div class="MenuTrang">

    @Html.PagedListPager(Model, page => Url.Action("Category", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>
